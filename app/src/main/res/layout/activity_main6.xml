<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#122334"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/ll_receipt_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#E0E0E0"
        android:orientation="vertical"
        android:padding="30dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Reciept"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="25dp" />

        <TextView
            android:id="@+id/tv_receipt_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity: 5"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="start" />

        <TextView
            android:id="@+id/tv_receipt_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Price: 75"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_gravity="start" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_back_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_receipt_card"
        android:layout_marginTop="50dp"
        android:text="Back To Shop"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:background="@color/black" />

</RelativeLayout>